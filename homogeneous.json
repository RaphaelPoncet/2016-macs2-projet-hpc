{
    "parameters" : ["xmid=0.5*(xmin+xmax)", 
                    "zmid=0.5*(zmin+zmax)", 
                    "lambda=0.0006", 
                    "Vmin=2000.0",
                    "Vmax=4000.0"],

    "init" : {"velocity" : {"formula" : "(z < 2000.0 ? Vmin : Vmax)"},
              "pressure_0" : {"formula" : "exp(-lambda*((x-xmid)^2 + (z-zmid)^2))"},
              "pressure_1" : {"formula" : "pressure_0"}},

    "grid" : {"file" : "./data/marm2_downsampled_8.xyz"},

    "output" : [ {"type" : "EvalVariable", 
                  "rhythm" : 100, 
                  "name": "pressure_ref",
                  "formula" : "pressure_0 - pressure_1"},
                 {"type" : "CheckVariables",
                  "rhythm" : 200},
                 {"type" : "OutputVariables", 
                  "rhythm" : 200, 
                  "format": "binary",
                  "file" : "./output/foobar"},
                 {"type" : "OutputVariables", 
                  "rhythm" : 100, 
                  "format": "VTK",
                  "file" : "./output/pressure"},
                 {"type" : "OutputReceivers", 
                  "rhythm" : 10, 
                  "format": "binary",
                  "iz" : 200,
                  "file" : "./output/receivers.dat"}]

}
